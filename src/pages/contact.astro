---
import Layout from '../layouts/Layout.astro'
import { profile } from '../settings'
import SocialIcons from '../components/ui/SocialIcons.astro'

const { title, institute } = profile
---

<Layout>
	<div data-page="contact">
	<section class='py-12'>
		<div class="text-center mb-12">
			<h1 class='text-4xl lg:text-6xl font-bold mb-4'>
				<span class="bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
					Contact
				</span>
			</h1>
			<p class='text-lg text-base-content/70 mb-8 max-w-2xl mx-auto'>
				Get in touch for research collaboration, academic discussions, or consulting opportunities.
			</p>
		</div>
		
		<div class='grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto'>
			<!-- Contact Information -->
			<div class='space-y-6 lg:col-span-1'>
				<div class='card bg-gradient-to-br from-base-200 to-base-300 shadow-xl hover:shadow-2xl transition-all duration-300 border border-primary/20 h-fit'>
					<div class='card-body p-6'>
						<h2 class='card-title text-xl mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent'>
							Contact Information
						</h2>
						<div class='space-y-4'>
							<div class='flex items-center gap-4 p-3 rounded-lg bg-base-100/50 hover:bg-base-100 transition-colors duration-200'>
								<div class='w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center shadow-lg flex-shrink-0'>
									<svg class='w-5 h-5 text-white' fill='currentColor' viewBox='0 0 20 20'>
										<path d='M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z'></path>
										<path d='M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z'></path>
									</svg>
								</div>
								<div class='min-w-0'>
									<p class='font-semibold text-base-content'>Email</p>
									<a href="mailto:hsn.hadipour@gmail.com" class='text-primary hover:text-secondary transition-colors duration-200 hover:underline text-sm'>
										hsn.hadipour@gmail.com
									</a>
								</div>
							</div>
							
							<div class='flex items-start gap-4 p-3 rounded-lg bg-base-100/50 hover:bg-base-100 transition-colors duration-200'>
								<div class='w-10 h-10 bg-gradient-to-br from-secondary to-accent rounded-full flex items-center justify-center shadow-lg flex-shrink-0 mt-1'>
									<svg class='w-5 h-5 text-white' fill='currentColor' viewBox='0 0 20 20'>
										<path fill-rule='evenodd' d='M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z' clip-rule='evenodd'></path>
									</svg>
								</div>
								<div class='min-w-0'>
									<p class='font-semibold text-base-content'>Office</p>
									<p class='text-base-content/70 text-sm'>{institute}</p>
									<p class='text-base-content/70 text-sm'>Faculty of Computer Science</p>
									<p class='text-base-content/70 text-sm'>Bochum, Germany</p>
								</div>
							</div>
							
							<div class='flex items-start gap-4 p-3 rounded-lg bg-base-100/50 hover:bg-base-100 transition-colors duration-200'>
								<div class='w-10 h-10 bg-gradient-to-br from-accent to-primary rounded-full flex items-center justify-center shadow-lg flex-shrink-0 mt-1'>
									<svg class='w-5 h-5 text-white' fill='currentColor' viewBox='0 0 20 20'>
										<path fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z' clip-rule='evenodd'></path>
									</svg>
								</div>
								<div class='min-w-0'>
									<p class='font-semibold text-base-content'>Position</p>
									<p class='text-base-content/70 text-sm'>{title}</p>
								</div>
							</div>
							
							<div class='flex items-start gap-4 p-3 rounded-lg bg-base-100/50 hover:bg-base-100 transition-colors duration-200'>
								<div class='w-10 h-10 bg-gradient-to-br from-primary/80 to-secondary/80 rounded-full flex items-center justify-center shadow-lg flex-shrink-0 mt-1'>
									<svg class='w-5 h-5 text-white' fill='currentColor' viewBox='0 0 20 20'>
										<path fill-rule='evenodd' d='M3 4a1 1 0 011-1h3a1 1 0 011 1v3a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h3a1 1 0 011 1v3a1 1 0 01-1 1H4a1 1 0 01-1-1v-3zM10 4a1 1 0 011-1h3a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1V4zM10 10a1 1 0 011-1h3a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-3z' clip-rule='evenodd'></path>
									</svg>
								</div>
								<div class='min-w-0 flex-1'>
									<p class='font-semibold text-base-content'>Public Key</p>
									<div class='bg-base-200 p-2 rounded mt-1'>
										<p class='text-xs font-mono text-base-content/60 break-all'>age17x6fu4na8hvxuh7hgs7ec62g7ddhsdlasqrqe6u7pzx0z86fpsxsgfpwdp</p>
									</div>
									<p class='text-xs text-base-content/50 mt-1'>For encrypted messages</p>
								</div>
							</div>
						</div>
						
						<div class='mt-6 p-4 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-lg border border-primary/20'>
							<h3 class='font-semibold text-base-content mb-3'>Connect on Social Media</h3>
							<SocialIcons />
						</div>
					</div>
				</div>
			</div>
			
			<!-- Secure Terminal Interface -->
			<div class='space-y-6 lg:col-span-2'>
				<div class='w-full'>
					<div class='bg-gradient-to-br from-black to-gray-900 border-2 border-green-400 rounded-lg p-4 lg:p-6 font-mono text-xs lg:text-sm shadow-2xl shadow-green-400/30 hover:shadow-green-400/40 transition-shadow duration-300 h-fit'>
						<!-- Terminal Header -->
						<div class='flex items-center justify-between mb-4 border-b border-green-400 pb-2'>
							<div class='flex items-center space-x-2'>
								<div class='w-3 h-3 bg-red-500 rounded-full animate-pulse'></div>
								<div class='w-3 h-3 bg-yellow-500 rounded-full animate-pulse' style="animation-delay: 0.5s"></div>
								<div class='w-3 h-3 bg-green-500 rounded-full animate-pulse' style="animation-delay: 1s"></div>
							</div>
							<span class='text-green-400 text-xs bg-green-400/10 px-2 py-1 rounded'>secure@crypt0grapher:~$</span>
						</div>

						<!-- Terminal Output -->
						<div id='terminal-output' class='bg-gradient-to-br from-black to-gray-900 text-green-400 p-3 lg:p-4 rounded border border-green-400/50 h-64 lg:h-80 overflow-y-auto mb-4 font-mono text-xs lg:text-sm shadow-inner'>
							<!-- Messages will appear here -->
						</div>

						<!-- Terminal Input -->
						<div class='flex flex-col sm:flex-row items-stretch sm:items-center gap-2'>
							<div class='flex items-center flex-1 min-w-0 bg-black/50 rounded p-2 border border-green-400/30'>
								<span class='text-green-400 text-xs lg:text-sm mr-2 flex-shrink-0'>root@secure:~#</span>
								<input
									id='terminal-input'
									name='terminal-input'
									type='text'
									placeholder='Enter secure message...'
									class='flex-1 bg-transparent border-none outline-none text-green-400 font-mono placeholder-green-600 text-xs lg:text-sm min-w-0'
								/>
							</div>
							<div class='flex gap-2 flex-shrink-0'>
								<button 
									id='terminal-send'
									class='px-2 sm:px-3 py-1 bg-gradient-to-r from-green-900 to-green-800 hover:from-green-700 hover:to-green-600 text-green-400 border border-green-400 rounded transition-all duration-200 font-mono text-xs shadow-lg hover:shadow-green-400/20'>
									[SEND]
								</button>
								<button 
									id='terminal-clear'
									class='px-2 sm:px-3 py-1 bg-gradient-to-r from-red-900 to-red-800 hover:from-red-700 hover:to-red-600 text-red-400 border border-red-400 rounded transition-all duration-200 font-mono text-xs shadow-lg hover:shadow-red-400/20'>
									[CLEAR]
								</button>
							</div>
						</div>

						<!-- Security Notice -->
						<div class='mt-4 text-xs text-amber-400 border-t border-amber-400/50 pt-3 bg-amber-400/5 rounded p-3'>
							<div class='flex items-center gap-2 mb-1'>
								<span class='animate-pulse text-amber-300'>‚óè</span> 
								<span>HTTPS protects browser-to-website connection</span>
							</div>
							<div class='flex items-center gap-2 mb-1'>
								<span class='animate-pulse text-amber-300' style="animation-delay: 0.5s">‚óè</span> 
								<span>n8n automation service can read message content</span>
							</div>
							<div class='flex items-center gap-2'>
								<span class='animate-pulse text-amber-300' style="animation-delay: 1s">‚óè</span> 
								<span>Not end to end encrypted (intermediaries can access)</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Research Collaboration & Opportunities - Enhanced -->
	<section class='py-12 border-t border-base-300'>
		<div class="text-center mb-12">
			<h2 class="text-3xl lg:text-4xl font-bold mb-4">
				<span class="bg-gradient-to-r from-secondary via-accent to-primary bg-clip-text text-transparent">
					Research Collaboration & Opportunities
				</span>
			</h2>
			<p class="text-base-content/70 max-w-2xl mx-auto">
				Open to exciting collaborations and partnerships across academia and industry
			</p>
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div class="group p-6 rounded-lg bg-gradient-to-br from-base-200 to-base-300 hover:from-primary/10 hover:to-secondary/10 transition-all duration-300 border border-primary/20 hover:border-primary/40 shadow-lg hover:shadow-xl">
				<div class="flex items-center gap-3 mb-4">
					<div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white text-xl">
						üî¨
					</div>
					<h3 class="text-xl font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Research Collaboration</h3>
				</div>
				<p class="text-base-content/80 leading-relaxed">Open to collaborative research in cryptanalysis, symmetric cryptography, and applied cryptographic protocol design. 
					Let's connect and discuss potential projects.</p>
			</div>
			
			<div class="group p-6 rounded-lg bg-gradient-to-br from-base-200 to-base-300 hover:from-secondary/10 hover:to-accent/10 transition-all duration-300 border border-secondary/20 hover:border-secondary/40 shadow-lg hover:shadow-xl">
				<div class="flex items-center gap-3 mb-4">
					<div class="w-10 h-10 bg-gradient-to-br from-secondary to-accent rounded-full flex items-center justify-center text-white text-xl">
						üéì
					</div>
					<h3 class="text-xl font-semibold bg-gradient-to-r from-secondary to-accent bg-clip-text text-transparent">Academic Partnerships</h3>
				</div>
				<p class="text-base-content/80 leading-relaxed">Interested in joint publications, conference presentations, and academic exchanges. 
				   Available for guest lectures and workshop participation.</p>
			</div>
			
			<div class="group p-6 rounded-lg bg-gradient-to-br from-base-200 to-base-300 hover:from-accent/10 hover:to-primary/10 transition-all duration-300 border border-accent/20 hover:border-accent/40 shadow-lg hover:shadow-xl">
				<div class="flex items-center gap-3 mb-4">
					<div class="w-10 h-10 bg-gradient-to-br from-accent to-primary rounded-full flex items-center justify-center text-white text-xl">
						üíº
					</div>
					<h3 class="text-xl font-semibold bg-gradient-to-r from-accent to-primary bg-clip-text text-transparent">Consulting Services</h3>
				</div>
				<p class="text-base-content/80 leading-relaxed">Providing expert consultation on cryptographic implementations, security assessments, and protocol analysis for industry and academia.</p>
			</div>
			
			<div class="group p-6 rounded-lg bg-gradient-to-br from-base-200 to-base-300 hover:from-primary/10 hover:to-accent/10 transition-all duration-300 border border-primary/20 hover:border-accent/40 shadow-lg hover:shadow-xl">
				<div class="flex items-center gap-3 mb-4">
					<div class="w-10 h-10 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center text-white text-xl">
						üë•
					</div>
					<h3 class="text-xl font-semibold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Mentoring & Supervision</h3>
				</div>
				<p class="text-base-content/80 leading-relaxed">Available for supervising master and bachelor students. 
				   Open to mentoring and guidance throughout their research journey.</p>
			</div>
		</div>
	</section>
	</div>
</Layout>

<script>
import { initTerminal } from '../lib/terminal.js';

// Configure contact page terminal
initTerminal({
  pageSelector: '[data-page="contact"]',
  outputId: 'terminal-output',
  inputId: 'terminal-input',
  sendBtnId: 'terminal-send',
  clearBtnId: 'terminal-clear',
  source: 'terminal_contact',
  storageKey: 'lastContactMessageSent',
  alwaysRefresh: true // Always show fresh messages when navigating to this page
  // Using default welcome messages from terminal.js
});
</script>
