---
import Layout from '../layouts/Layout.astro'
import { profile, social } from '@/settings'
import SocialIcons from '@/components/ui/SocialIcons.astro'

const { fullName, title, institute } = profile
---

<Layout>
	<section class='py-12'>
		<h1 class='text-4xl font-bold mb-8'>Contact</h1>
		<p class='text-lg text-gray-600 mb-8'>
			Get in touch for research collaboration, academic discussions, or consulting opportunities.
		</p>
		
		<div class='grid grid-cols-1 lg:grid-cols-2 gap-12'>
			<!-- Contact Information -->
			<div class='space-y-8'>
				<div class='card bg-base-100 shadow-xl'>
					<div class='card-body'>
						<h2 class='card-title text-2xl mb-4'>Contact Information</h2>
						<div class='space-y-4'>
							<div class='flex items-center gap-3'>
								<div class='w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center'>
									<svg class='w-4 h-4 text-primary' fill='currentColor' viewBox='0 0 20 20'>
										<path d='M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z'></path>
										<path d='M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z'></path>
									</svg>
								</div>
								<div>
									<p class='font-semibold'>Email</p>
									<a href={`mailto:${social.email}`} class='text-primary hover:underline'>
										{social.email}
									</a>
								</div>
							</div>
							
							<div class='flex items-center gap-3'>
								<div class='w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center'>
									<svg class='w-4 h-4 text-primary' fill='currentColor' viewBox='0 0 20 20'>
										<path fill-rule='evenodd' d='M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z' clip-rule='evenodd'></path>
									</svg>
								</div>
								<div>
									<p class='font-semibold'>Office</p>
									<p class='text-gray-600'>{institute}</p>
									<p class='text-gray-600'>Faculty of Computer Science</p>
									<p class='text-gray-600'>Bochum, Germany</p>
								</div>
							</div>
							
							<div class='flex items-center gap-3'>
								<div class='w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center'>
									<svg class='w-4 h-4 text-primary' fill='currentColor' viewBox='0 0 20 20'>
										<path fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z' clip-rule='evenodd'></path>
									</svg>
								</div>
								<div>
									<p class='font-semibold'>Position</p>
									<p class='text-gray-600'>{title}</p>
								</div>
							</div>
						</div>
						
						<div class='mt-6'>
							<h3 class='font-semibold mb-3'>Connect on Social Media</h3>
							<SocialIcons />
						</div>
					</div>
				</div>
			</div>
			
			<!-- Contact Form -->
			<div class='space-y-8'>
				<div class='card bg-base-100 shadow-xl'>
					<div class='card-body'>
						<h2 class='card-title text-2xl mb-4'>Send a Message</h2>
						<form class='space-y-4' method='POST' action='#'>
							<div class='form-control'>
								<label class='label'>
									<span class='label-text'>Name</span>
								</label>
								<input type='text' name='name' placeholder='Your name' class='input input-bordered' required />
							</div>
							
							<div class='form-control'>
								<label class='label'>
									<span class='label-text'>Email</span>
								</label>
								<input type='email' name='email' placeholder='your.email@example.com' class='input input-bordered' required />
							</div>
							
							<div class='form-control'>
								<label class='label'>
									<span class='label-text'>Institution/Organization</span>
								</label>
								<input type='text' name='institution' placeholder='Your institution (optional)' class='input input-bordered' />
							</div>
							
							<div class='form-control'>
								<label class='label'>
									<span class='label-text'>Subject</span>
								</label>
								<select class='select select-bordered' name='subject' required>
									<option disabled selected>Choose a topic</option>
									<option value='research'>Research Collaboration</option>
									<option value='consultation'>Consultation</option>
									<option value='speaking'>Speaking Opportunity</option>
									<option value='student'>Student Inquiry</option>
									<option value='other'>Other</option>
								</select>
							</div>
							
							<div class='form-control'>
								<label class='label'>
									<span class='label-text'>Message</span>
								</label>
								<textarea name='message' class='textarea textarea-bordered h-24' placeholder='Your message...' required></textarea>
							</div>
							
							<div class='form-control mt-6'>
								<button type='submit' class='btn btn-primary'>
									Send Message
								</button>
							</div>
						</form>
						
						<div class='alert alert-info mt-4'>
							<svg class='w-4 h-4' fill='currentColor' viewBox='0 0 20 20'>
								<path fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z' clip-rule='evenodd'></path>
							</svg>
							<span class='text-sm'>Form functionality will be implemented with a backend service for GitHub Pages deployment.</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class='mt-12'>
			<h2 class='text-2xl font-bold mb-4'>Research Interests</h2>
			<p class='text-gray-600 mb-4'>
				I'm particularly interested in collaborations related to:
			</p>
			<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4'>
				<div class='card bg-primary/10'>
					<div class='card-body text-center'>
						<h3 class='font-semibold'>Cryptanalysis</h3>
						<p class='text-sm text-gray-600'>Symmetric-key primitives</p>
					</div>
				</div>
				<div class='card bg-secondary/10'>
					<div class='card-body text-center'>
						<h3 class='font-semibold'>Side-Channel Attacks</h3>
						<p class='text-sm text-gray-600'>Hardware security</p>
					</div>
				</div>
				<div class='card bg-accent/10'>
					<div class='card-body text-center'>
						<h3 class='font-semibold'>Cryptography</h3>
						<p class='text-sm text-gray-600'>Theory and practice</p>
					</div>
				</div>
				<div class='card bg-info/10'>
					<div class='card-body text-center'>
						<h3 class='font-semibold'>Information Security</h3>
						<p class='text-sm text-gray-600'>Applied research</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
