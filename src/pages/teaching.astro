---
import Layout from '../layouts/Layout.astro'
import { profile } from '@/settings'
import { teaching } from '@/data/cv'

const { fullName } = profile
---

<Layout>
	<section class='py-12'>
		<h1 class='text-4xl font-bold mb-8'>Teaching</h1>
		<p class='text-lg text-gray-600 mb-8'>
			My teaching experience in cryptography and mathematics, contributing to education at various academic levels.
		</p>
		
		<div class='space-y-8'>
			<!-- Teaching Experience -->
			<div class='mb-12'>
				<h2 class='text-3xl font-bold mb-6'>Teaching Experience</h2>
				<div class='space-y-6'>
					{teaching.map((item) => (
						<div class='card bg-base-100 shadow-xl'>
							<div class='card-body'>
								<div class='flex flex-col md:flex-row md:justify-between md:items-start mb-4'>
									<div>
										<h3 class='card-title text-xl text-primary'>{item.course}</h3>
										<p class='text-lg font-semibold text-gray-700'>{item.role}</p>
										<p class='text-base text-gray-600'>{item.institution}</p>
									</div>
									<div class='badge badge-outline badge-lg mt-2 md:mt-0'>{item.time}</div>
								</div>
								<p class='text-gray-600'>{item.description}</p>
							</div>
						</div>
					))}
				</div>
			</div>
			
			<!-- Teaching Philosophy & Approach -->
			<div class='card bg-base-100 shadow-xl'>
				<div class='card-body'>
					<h2 class='card-title text-2xl mb-4'>Teaching Philosophy</h2>
					<div class='space-y-4 text-gray-600'>
						<p>
							My teaching approach focuses on building strong theoretical foundations while emphasizing practical applications in cryptography and security. I believe in making complex mathematical concepts accessible through clear explanations and hands-on examples.
						</p>
						<div class='space-y-2'>
							<h3 class='font-semibold text-gray-800'>Key Teaching Areas:</h3>
							<ul class='list-disc list-inside space-y-1'>
								<li>Symmetric-key cryptography and cryptanalysis</li>
								<li>Mathematical foundations of cryptography</li>
								<li>Automated methods in security analysis</li>
								<li>Practical implementation of cryptographic algorithms</li>
								<li>Research methodology in cryptography</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Guest Lectures & Workshops -->
			<div class='card bg-base-100 shadow-xl'>
				<div class='card-body'>
					<h2 class='card-title text-2xl mb-4'>Guest Lectures & Research Contributions</h2>
					<div class='space-y-4 text-gray-600'>
						<p>
							As a guest lecturer for advanced cryptanalysis courses at Graz University of Technology, I have contributed to graduate-level education in cutting-edge cryptographic research topics.
						</p>
						<div class='space-y-2'>
							<h3 class='font-semibold text-gray-800'>Specialized Topics:</h3>
							<ul class='list-disc list-inside space-y-1'>
								<li>Differential and linear cryptanalysis techniques</li>
								<li>SAT/SMT-based cryptanalysis methods</li>
								<li>Automated security evaluation tools</li>
								<li>Advanced attack methodologies</li>
								<li>Research trends in symmetric cryptography</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Resources Section -->
		<div class='mt-12'>
			<h2 class='text-3xl font-bold mb-6'>Teaching Resources</h2>
			<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
				<div class='card bg-base-100 shadow-xl'>
					<div class='card-body'>
						<h3 class='card-title text-primary'>üìö Course in Cryptanalysis</h3>
						<p class='text-gray-600'>Comprehensive cryptanalysis course materials covering modern techniques and methodologies.</p>
						<div class='flex items-center gap-2 text-sm text-gray-500 mt-2'>
							<span>‚≠ê 145 stars</span>
							<span>üç¥ 10 forks</span>
						</div>
						<div class='card-actions justify-end mt-4'>
							<a href='https://github.com/hadipourh/course-cryptanalysis' target='_blank' rel='noopener noreferrer' class='btn btn-primary btn-sm'>
								View Course
							</a>
						</div>
					</div>
				</div>
				
				<div class='card bg-base-100 shadow-xl'>
					<div class='card-body'>
						<h3 class='card-title text-primary'>üéØ Conference Talks</h3>
						<p class='text-gray-600'>LaTeX sources for my conference presentations and research talks.</p>
						<div class='flex items-center gap-2 text-sm text-gray-500 mt-2'>
							<span>‚≠ê 6 stars</span>
							<span>üç¥ 3 forks</span>
						</div>
						<div class='card-actions justify-end mt-4'>
							<a href='https://github.com/hadipourh/talks' target='_blank' rel='noopener noreferrer' class='btn btn-primary btn-sm'>
								View Talks
							</a>
						</div>
					</div>
				</div>
				
				<div class='card bg-base-100 shadow-xl'>
					<div class='card-body'>
						<h3 class='card-title text-primary'>üîß Cryptanalysis Tools</h3>
						<p class='text-gray-600'>Collection of open-source tools for automated cryptanalysis and security analysis.</p>
						<div class='flex flex-wrap gap-1 mt-2'>
							<div class='badge badge-outline badge-xs'>AutoGuess</div>
							<div class='badge badge-outline badge-xs'>ZeroPlus</div>
							<div class='badge badge-outline badge-xs'>SBoxAnalyzer</div>
						</div>
						<div class='card-actions justify-end mt-4'>
							<a href='https://github.com/hadipourh?tab=repositories&q=crypto&type=&language=&sort=' target='_blank' rel='noopener noreferrer' class='btn btn-primary btn-sm'>
								View Projects
							</a>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Featured Tools -->
			<div class='mt-8'>
				<h3 class='text-xl font-bold mb-4'>Featured Cryptanalysis Tools</h3>
				<div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
					<div class='card bg-base-200'>
						<div class='card-body p-4'>
							<div class='flex justify-between items-start'>
								<div>
									<h4 class='font-semibold text-primary'>AutoGuess</h4>
									<p class='text-sm text-gray-600'>Solve guess-and-determine problems</p>
									<span class='text-xs text-gray-500'>‚≠ê 28 stars</span>
								</div>
								<a href='https://github.com/hadipourh/autoguess' target='_blank' rel='noopener noreferrer' class='btn btn-ghost btn-xs'>
									View ‚Üí
								</a>
							</div>
						</div>
					</div>
					
					<div class='card bg-base-200'>
						<div class='card-body p-4'>
							<div class='flex justify-between items-start'>
								<div>
									<h4 class='font-semibold text-primary'>SBoxAnalyzer</h4>
									<p class='text-sm text-gray-600'>S-box analysis tool for cryptanalysis</p>
									<span class='text-xs text-gray-500'>‚≠ê 31 stars</span>
								</div>
								<a href='https://github.com/hadipourh/sboxanalyzer' target='_blank' rel='noopener noreferrer' class='btn btn-ghost btn-xs'>
									View ‚Üí
								</a>
							</div>
						</div>
					</div>
					
					<div class='card bg-base-200'>
						<div class='card-body p-4'>
							<div class='flex justify-between items-start'>
								<div>
									<h4 class='font-semibold text-primary'>ZeroPlus</h4>
									<p class='text-sm text-gray-600'>Integral and impossible differential attacks</p>
									<span class='text-xs text-gray-500'>‚≠ê 13 stars</span>
								</div>
								<a href='https://github.com/hadipourh/zeroplus' target='_blank' rel='noopener noreferrer' class='btn btn-ghost btn-xs'>
									View ‚Üí
								</a>
							</div>
						</div>
					</div>
					
					<div class='card bg-base-200'>
						<div class='card-body p-4'>
							<div class='flex justify-between items-start'>
								<div>
									<h4 class='font-semibold text-primary'>Zero</h4>
									<p class='text-sm text-gray-600'>Full impossible-differential attacks</p>
									<span class='text-xs text-gray-500'>‚≠ê 11 stars</span>
								</div>
								<a href='https://github.com/hadipourh/zero' target='_blank' rel='noopener noreferrer' class='btn btn-ghost btn-xs'>
									View ‚Üí
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
