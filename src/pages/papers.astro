					counts.conference++;
				} else if (type === 'hybrid') {
					counts.hybrid++;
					// Hybrid papers count toward both journal and conference
					counts.journal++;
					counts.conference++;
				} else if (type === 'workshop') {
					counts.workshop++;
				} else if (type === 'preprint') {
					counts.preprint++;
				}
			});
			
			// We no longer update button text with counts
			return counts;
		}
		
		// Search input handler
		searchInput?.addEventListener('input', () => {
			filterPublications();
		});
		
		// Filter button handlers
    filterButtons.forEach((btn) => {
      btn.addEventListener('click', (event) => {
        filterButtons.forEach((button) => {
          button.classList.remove('btn-primary', 'active');
          button.classList.add('btn-outline');
        });
				
        const target = event.currentTarget as HTMLButtonElement;
        target.classList.remove('btn-outline');
        target.classList.add('btn-primary', 'active');
				
        currentFilter = (target.dataset.filter as FilterOption) ?? 'all';
        filterPublications();
      });
    });
		
		// Sort handler
    sortSelect?.addEventListener('change', (event) => {
      const select = event.currentTarget as HTMLSelectElement;
      currentSort = (select.value as SortOption) || 'year-desc';
      filterPublications();
    });
		
		function filterPublications() {
      const searchTerm = searchInput?.value?.toLowerCase() ?? '';
      const publications = document.querySelectorAll<HTMLElement>('[data-publication]');
			
      publications.forEach((pub) => {
        const title = pub.dataset.title?.toLowerCase() ?? '';
        const authors = pub.dataset.authors?.toLowerCase() ?? '';
        const venue = pub.dataset.venue?.toLowerCase() ?? '';
        const type = pub.dataset.type?.toLowerCase() ?? '';
				
				// Check search match
				const searchMatch = !searchTerm || 
					title.includes(searchTerm) || 
					authors.includes(searchTerm) || 
					venue.includes(searchTerm);
				
				// Check filter match
				let filterMatch = currentFilter === 'all';
				if (!filterMatch) {
					if (currentFilter === 'journal') {
						filterMatch = type === 'journal' || type === 'hybrid';
					} else if (currentFilter === 'conference') {
						filterMatch = type === 'conference' || type === 'hybrid';
					} else {
						filterMatch = type === currentFilter;
					}
				}
				
				// Show/hide publication
        pub.style.display = (searchMatch && filterMatch) ? 'block' : 'none';
			});
			
			// Sort visible publications
			sortPublications();
		}
		
    function sortPublications() {
      const visiblePubs = Array.from(document.querySelectorAll<HTMLElement>('[data-publication]:not([style*="display: none"])'));
			
      visiblePubs.sort((a, b) => {
				switch (currentSort) {
					case 'year-desc':
            return Number.parseInt(b.dataset.year ?? '0', 10) - Number.parseInt(a.dataset.year ?? '0', 10);
					case 'year-asc':
            return Number.parseInt(a.dataset.year ?? '0', 10) - Number.parseInt(b.dataset.year ?? '0', 10);
					case 'venue':
            return (a.dataset.venue ?? '').localeCompare(b.dataset.venue ?? '');
					case 'title':
            return (a.dataset.title ?? '').localeCompare(b.dataset.title ?? '');
					default:
						return 0;
				}
			});
			
			// Re-append sorted elements
			visiblePubs.forEach(pub => {
				publicationsList?.appendChild(pub);
			});
		}
		
		// Initialize search functionality
		function initializeSearch() {
			// Just filter publications, no need to update counts on buttons
			filterPublications();
		}
		
		// Run immediately if DOM is already loaded
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initializeSearch);
		} else {
			// DOM already loaded, run now
			initializeSearch();
		}
	}
	
	// Initialize on first load
	initializeSearchAndFilter();
	
	// Re-initialize when navigating via Astro transitions
	document.addEventListener('astro:page-load', () => {
		initializeSearchAndFilter();
	});
	</script>
