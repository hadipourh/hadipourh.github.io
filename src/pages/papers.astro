	<!-- Search and Filter JavaScript -->
	<script>
		// Function to initialize search functionality
		function initializeSearchAndFilter() {
			// Search functionality
			const searchInput = document.getElementById('searchInput');
			const filterButtons = document.querySelectorAll('.filter-btn');
			const sortSelect = document.getElementById('sortSelect');
			const publicationsList = document.getElementById('publicationsList');
			
			let currentFilter = 'all';
			let currentSort = 'year-desc';
			
			// Count publication types (but don't display counts)
			function countPublications() {
				const publications = document.querySelectorAll('[data-publication]');
				const counts = {
					all: publications.length,
					journal: 0,
					conference: 0,
					workshop: 0,
				preprint: 0,
				hybrid: 0
			};
			
			publications.forEach(pub => {
				const type = pub.getAttribute('data-type')?.toLowerCase() || '';
				if (type === 'journal') {
					counts.journal++;
				} else if (type === 'conference') {
					counts.conference++;
				} else if (type === 'hybrid') {
					counts.hybrid++;
					// Hybrid papers count toward both journal and conference
					counts.journal++;
					counts.conference++;
				} else if (type === 'workshop') {
					counts.workshop++;
				} else if (type === 'preprint') {
					counts.preprint++;
				}
			});
			
			// We no longer update button text with counts
			return counts;
		}
		
		// Search input handler
		searchInput?.addEventListener('input', () => {
			filterPublications();
		});
		
		// Filter button handlers
		filterButtons.forEach(btn => {
			btn.addEventListener('click', (e) => {
				// Update active button
				filterButtons.forEach(b => {
					b.classList.remove('btn-primary', 'active');
					b.classList.add('btn-outline');
				});
				
				// Get the button element (might be the span inside the button)
				const target = e.target.closest('.filter-btn') || e.target;
				target.classList.remove('btn-outline');
				target.classList.add('btn-primary', 'active');
				
				currentFilter = target.getAttribute('data-filter');
				filterPublications();
			});
		});
		
		// Sort handler
		sortSelect?.addEventListener('change', (e) => {
			currentSort = e.target.value;
			filterPublications();
		});
		
		function filterPublications() {
			const searchTerm = searchInput?.value?.toLowerCase() || '';
			const publications = document.querySelectorAll('[data-publication]');
			
			publications.forEach(pub => {
				const title = pub.getAttribute('data-title')?.toLowerCase() || '';
				const authors = pub.getAttribute('data-authors')?.toLowerCase() || '';
				const venue = pub.getAttribute('data-venue')?.toLowerCase() || '';
				const type = pub.getAttribute('data-type')?.toLowerCase() || '';
				
				// Check search match
				const searchMatch = !searchTerm || 
					title.includes(searchTerm) || 
					authors.includes(searchTerm) || 
					venue.includes(searchTerm);
				
				// Check filter match
				let filterMatch = currentFilter === 'all';
				if (!filterMatch) {
					if (currentFilter === 'journal') {
						filterMatch = type === 'journal' || type === 'hybrid';
					} else if (currentFilter === 'conference') {
						filterMatch = type === 'conference' || type === 'hybrid';
					} else {
						filterMatch = type === currentFilter;
					}
				}
				
				// Show/hide publication
				pub.style.display = (searchMatch && filterMatch) ? 'block' : 'none';
			});
			
			// Sort visible publications
			sortPublications();
		}
		
		function sortPublications() {
			const visiblePubs = Array.from(document.querySelectorAll('[data-publication]:not([style*="display: none"])'));
			
			visiblePubs.sort((a, b) => {
				switch (currentSort) {
					case 'year-desc':
						return parseInt(b.getAttribute('data-year')) - parseInt(a.getAttribute('data-year'));
					case 'year-asc':
						return parseInt(a.getAttribute('data-year')) - parseInt(b.getAttribute('data-year'));
					case 'venue':
						return (a.getAttribute('data-venue') || '').localeCompare(b.getAttribute('data-venue') || '');
					case 'title':
						return (a.getAttribute('data-title') || '').localeCompare(b.getAttribute('data-title') || '');
					default:
						return 0;
				}
			});
			
			// Re-append sorted elements
			visiblePubs.forEach(pub => {
				publicationsList?.appendChild(pub);
			});
		}
		
		// Initialize search functionality
		function initializeSearch() {
			// Just filter publications, no need to update counts on buttons
			filterPublications();
		}
		
		// Run immediately if DOM is already loaded
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initializeSearch);
		} else {
			// DOM already loaded, run now
			initializeSearch();
		}
	}
	
	// Initialize on first load
	initializeSearchAndFilter();
	
	// Re-initialize when navigating via Astro transitions
	document.addEventListener('astro:page-load', () => {
		initializeSearchAndFilter();
	});
	</script>
