---
import { ClientRouter } from 'astro:transitions';

import BetterIcon from '../components/ui/BetterIcon.astro'
import DarkLightController from '../components/ui/DarkLightController.astro'
import Navbar from '../components/ui/Navbar.astro'
import Head from '../components/Head.astro'

import { seo, profile, template } from '../settings'
import Footer from '../components/ui/Footer.astro'

type Props = {
	title?: string
	description?: string
	image?: string
}

const {
	title = seo.default_title,
	description = seo.default_description,
	image = seo.default_image,
} = Astro.props
---

<!doctype html>
<html lang='en' data-theme="night">
	<head>
		{template.transitions && <ClientRouter /> }

		<Head title={title} description={description} image={image} />
	</head>
	<body>
		<div class={`bg-base-100 drawer lg:drawer-open ${template.menu_left ? 'drawer-end' : ''}`}>
			<input id='my-drawer' type='checkbox' class='drawer-toggle' />
			<!-- Drawer content -->
            <div class='drawer-content bg-base-100'>
				<div class='bg-gradient-to-r from-base-100 via-base-200/30 to-base-100 backdrop-blur-sm z-50 text-base-content shadow-lg border-b border-base-300/50'>
					<nav class='navbar'>
						<div class='navbar-start'>
							{template.menu_left &&
								<div class="transition-all duration-300 hover:scale-110">
									<DarkLightController/>
								</div>
							}
							<label for='my-drawer' class='btn btn-square btn-ghost lg:hidden group transition-all duration-300 hover:scale-110 hover:bg-primary/10'>
								<BetterIcon>
									<svg
										xmlns='http://www.w3.org/2000/svg'
										fill='none'
										viewBox='0 0 24 24'
										stroke-width='1.5'
										class='size-6 stroke-current transition-colors duration-300 group-hover:stroke-primary'
									>
										<path
											stroke-linecap='round'
											stroke-linejoin='round'
											d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
									</svg>
								</BetterIcon>
							</label>
						</div>
						<div class='navbar-center lg:hidden text-lg font-black hidden'>
							<span class="text-primary dark:text-primary-content font-bold">
								{profile.title}
								{profile.fullName}
							</span>
						</div>
						<div class='navbar-end'>
							{!template.menu_left &&
								<div class="transition-all duration-300 hover:scale-110">
									<DarkLightController/>
								</div>
							}
						</div>
					</nav>
				</div>
                <main class='p-4 sm:p-6 lg:p-8 pt-6 sm:pt-8 lg:pt-16 lg:max-w-5xl max-w-full mx-auto min-h-screen flex flex-col justify-between'>
					<!-- Page content -->
					<slot />
				<Footer />
				</main>
			</div>
			<!-- Drawer side -->
			<div class='drawer-side z-40'>
				<label for='my-drawer' aria-label='close sidebar' class='drawer-overlay'
				></label>
				<Navbar />
			</div>
		</div>
	</body>
</html>

<style>
	@media (prefers-color-scheme: dark) {
		:root {
			--my-color: #252b30;
		}
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Override corporate theme to use rounded corners like night theme */
	[data-theme="corporate"] {
		--rounded-box: 1rem; /* card and other large boxes */
		--rounded-btn: 1.9rem; /* buttons and similar elements */
		--rounded-badge: 1.9rem; /* badges and tags */
		
		/* Shiki/Astro code highlighting variables for light theme */
		--astro-code-background: #f3f4f6; /* Light gray background */
		--astro-code-foreground: #1f2937; /* Dark gray text */
		--astro-code-token-constant: #1f2937;
		--astro-code-token-string: #1f2937;
		--astro-code-token-comment: #6b7280; /* Slightly lighter for comments */
		--astro-code-token-keyword: #1f2937;
		--astro-code-token-parameter: #1f2937;
		--astro-code-token-function: #1f2937;
		--astro-code-token-string-expression: #1f2937;
		--astro-code-token-punctuation: #1f2937;
		--astro-code-token-link: #1f2937;
	}
	
	[data-theme="night"] {
		/* Shiki/Astro code highlighting variables for dark theme */
		--astro-code-background: #1e293b; /* Dark slate background */
		--astro-code-foreground: #e2e8f0; /* Light slate text */
		--astro-code-token-constant: #e2e8f0;
		--astro-code-token-string: #e2e8f0;
		--astro-code-token-comment: #94a3b8; /* Slightly dimmer for comments */
		--astro-code-token-keyword: #e2e8f0;
		--astro-code-token-parameter: #e2e8f0;
		--astro-code-token-function: #e2e8f0;
		--astro-code-token-string-expression: #e2e8f0;
		--astro-code-token-punctuation: #e2e8f0;
		--astro-code-token-link: #e2e8f0;
	}

	/* Name and title text colors - maximum contrast */
	[data-theme="corporate"] .name-title-text {
		color: #000000 !important;
	}
	
	[data-theme="night"] .name-title-text {
		color: #67e8f9 !important; /* cyan-300 - professional hacker aesthetic */
	}

	/* Global prose content overflow handling for mobile responsiveness */
	.prose {
		/* Ensure prose content never exceeds container width */
		max-width: 100% !important;
		overflow-wrap: break-word !important;
		word-wrap: break-word !important;
		overflow-x: hidden !important;
		box-sizing: border-box !important;
	}
	
	/* Handle all child elements within prose */
	.prose * {
		max-width: 100% !important;
		overflow-wrap: break-word !important;
		word-wrap: break-word !important;
		box-sizing: border-box !important;
	}
	
	/* Handle code blocks and pre elements */
	.prose pre,
	.prose code {
		max-width: 100% !important;
		overflow-x: auto !important;
		white-space: pre-wrap !important;
		word-break: break-all !important;
		font-size: 0.75rem !important;
	}
	
	/* Code blocks styling - works with Astro's Shiki CSS variables */
	[data-theme="corporate"] .prose pre.astro-code,
	[data-theme="corporate"] article.prose pre.astro-code,
	[data-theme="corporate"] div.prose pre.astro-code {
		border: 1px solid #d1d5db !important;
		padding: 1rem !important;
		border-radius: 0.5rem !important;
	}
	
	[data-theme="night"] .prose pre.astro-code,
	[data-theme="night"] article.prose pre.astro-code,
	[data-theme="night"] div.prose pre.astro-code {
		border: 1px solid #334155 !important;
		padding: 1rem !important;
		border-radius: 0.5rem !important;
	}
	
	/* Handle inline code - corporate theme */
	[data-theme="corporate"] .prose code:not(pre code),
	[data-theme="corporate"] article.prose code:not(pre code) {
		white-space: normal !important;
		word-break: break-all !important;
		background-color: #f3f4f6 !important;
		color: #1f2937 !important;
		padding: 0.125rem 0.25rem !important;
		border-radius: 0.25rem !important;
	}
	
	/* Handle inline code - night theme */
	[data-theme="night"] .prose code:not(pre code),
	[data-theme="night"] article.prose code:not(pre code) {
		white-space: normal !important;
		word-break: break-all !important;
		background-color: #1e293b !important;
		color: #e2e8f0 !important;
		padding: 0.125rem 0.25rem !important;
		border-radius: 0.25rem !important;
	}
	
	/* Handle tables */
	.prose table {
		width: 100% !important;
		table-layout: fixed !important;
		overflow-x: auto !important;
		display: block !important;
		white-space: nowrap !important;
	}
	
	/* Handle images */
	.prose img {
		max-width: 100% !important;
		height: auto !important;
		width: auto !important;
	}
	
	/* Handle long URLs and links */
	.prose a {
		word-break: break-all !important;
		overflow-wrap: break-word !important;
		hyphens: auto !important;
	}
	
	/* Handle blockquotes */
	.prose blockquote {
		max-width: 100% !important;
		overflow-wrap: break-word !important;
		word-break: break-word !important;
	}
	
	/* Handle paragraphs and text elements */
	.prose p,
	.prose li,
	.prose div {
		max-width: 100% !important;
		overflow-wrap: break-word !important;
		word-break: break-word !important;
	}
	
	/* Responsive container for all content */
	@media (max-width: 640px) {
		.prose {
			font-size: 0.875rem !important;
			line-height: 1.5 !important;
		}
		
		.prose h1 {
			font-size: 1.5rem !important;
		}
		
		.prose h2 {
			font-size: 1.25rem !important;
		}
		
		.prose h3 {
			font-size: 1.125rem !important;
		}
		
		.prose pre {
			font-size: 0.75rem !important;
			padding: 0.5rem !important;
		}
		
		.prose code:not(pre code) {
			font-size: 0.75rem !important;
		}
	}
</style>
