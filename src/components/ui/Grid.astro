---
interface Props {
  gridTitle: string;
  gridItems: {
    title: string;
    description: string;
  }[];
}

const {gridTitle, gridItems} = Astro.props;

import { getTextColorClass } from '../../lib/utils';

// Solid colors for professional hacker aesthetic - NO GRADIENTS
const hoverTints = ['hover:bg-teal-600/10', 'hover:bg-cyan-600/10', 'hover:bg-emerald-600/10']
const borderTints = ['border-teal-600/20 hover:border-teal-600/40', 'border-cyan-600/20 hover:border-cyan-600/40', 'border-emerald-600/20 hover:border-emerald-600/40']
---
<h2 class={`text-3xl md:text-4xl font-bold mb-8 ${getTextColorClass(0)}`}>{gridTitle}</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {gridItems.map((item, index) => (
    <div class={`group relative overflow-hidden p-6 rounded-lg bg-base-200 ${hoverTints[index % 3]} transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 border ${borderTints[index % 3]}`}>
      <h3 class="text-xl font-semibold mb-3 name-title-text">{item.title}</h3>
      <p class="text-base-content/80 leading-relaxed">{item.description}</p>
    </div>
  ))}
</div>
