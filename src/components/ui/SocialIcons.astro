---
import Envelope from '@/assets/social-icons/envelope.svg'
import GitHub from '@/assets/social-icons/github.svg'
import GitLab from '@/assets/social-icons/gitlab.svg'
import LinkedIn from '@/assets/social-icons/linkedin.svg'
import Scholar from '@/assets/social-icons/google-scholar.svg'
import X from '@/assets/social-icons/x-twitter.svg'
import Inspire from '@/assets/social-icons/inspire.svg'
import Arxiv from '@/assets/social-icons/arxiv.svg'
import DBLP from '@/assets/social-icons/dblp.svg'
import IACR from '@/assets/social-icons/iacr.svg'
import ORCID from '@/assets/social-icons/orcid.svg'
import ResearchGate from '@/assets/social-icons/researchgate.svg'

import { social } from '@/settings'

const activeSocial = Object.keys(social).filter((key) => social[key as keyof typeof social] !== '')
const calculatedIconSize = activeSocial.length <= 5 ? 'size-6' : activeSocial.length <= 6 ? 'size-5' : 'size-4'
const calculatedContainerSize = activeSocial.length <= 5 ? 'size-12' : activeSocial.length <= 6 ? 'size-10' : 'size-8'

// Social media color schemes for hover effects
const socialColors = {
	email: 'hover:bg-red-500/20 hover:text-red-500 hover:shadow-red-500/25',
	github: 'hover:bg-gray-800/20 hover:text-gray-800 hover:shadow-gray-800/25',
	dblp: 'hover:bg-blue-600/20 hover:text-blue-600 hover:shadow-blue-600/25',
	scholar: 'hover:bg-blue-700/20 hover:text-blue-700 hover:shadow-blue-700/25',
	iacr: 'hover:bg-purple-600/20 hover:text-purple-600 hover:shadow-purple-600/25',
	orcid: 'hover:bg-green-600/20 hover:text-green-600 hover:shadow-green-600/25',
	linkedin: 'hover:bg-blue-600/20 hover:text-blue-600 hover:shadow-blue-600/25',
	x: 'hover:bg-gray-900/20 hover:text-gray-900 hover:shadow-gray-900/25',
	researchgate: 'hover:bg-teal-600/20 hover:text-teal-600 hover:shadow-teal-600/25',
	gitlab: 'hover:bg-orange-600/20 hover:text-orange-600 hover:shadow-orange-600/25',
	inspire: 'hover:bg-indigo-600/20 hover:text-indigo-600 hover:shadow-indigo-600/25',
	arxiv: 'hover:bg-red-700/20 hover:text-red-700 hover:shadow-red-700/25'
}

---

<div class='flex flex-wrap justify-between items-center gap-2'>

	<!-- Email -->
    {social.email !== '' &&
        <a href={`mailto:${social.email}`} class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.email} group relative overflow-hidden`} aria-label="Email">
            <Envelope class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-red-500/10 to-red-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- GitHub -->
    {social.github !== '' &&
        <a href={social.github} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.github} group relative overflow-hidden`} aria-label="GitHub profile">
            <GitHub class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-gray-800/10 to-gray-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- DBLP -->
    {social.dblp !== '' &&
        <a href={social.dblp} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.dblp} group relative overflow-hidden`} aria-label="DBLP profile">
            <DBLP class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-blue-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- Google Scholar -->
    {social.scholar !== '' &&
        <a href={social.scholar} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.scholar} group relative overflow-hidden`} aria-label="Google Scholar profile">
            <Scholar class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-blue-700/10 to-blue-800/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- IACR -->
    {social.iacr !== '' &&
        <a href={social.iacr} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.iacr} group relative overflow-hidden`} aria-label="IACR profile">
            <IACR class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-purple-600/10 to-purple-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- ORCID -->
    {social.orcid !== '' &&
        <a href={social.orcid} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.orcid} group relative overflow-hidden`} aria-label="ORCID profile">
            <ORCID class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-green-600/10 to-green-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- LinkedIn -->
    {social.linkedin !== '' &&
        <a href={social.linkedin} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.linkedin} group relative overflow-hidden`} aria-label="LinkedIn profile">
            <LinkedIn class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-blue-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- X -->
    {social.x !== '' &&
        <a href={social.x} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.x} group relative overflow-hidden`} aria-label="X (Twitter) profile">
            <X class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-gray-900/10 to-black/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- ResearchGate -->
    {social.researchgate !== '' &&
        <a href={social.researchgate} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.researchgate} group relative overflow-hidden`} aria-label="ResearchGate profile">
            <ResearchGate class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-teal-600/10 to-teal-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

	<!-- GitLab -->
    {social.gitlab !== '' &&
        <a href={social.gitlab} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.gitlab} group relative overflow-hidden`} aria-label="GitLab profile">
            <GitLab class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-orange-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
	</a>
	}

<!-- Inspire -->
    {social.inspire !== '' &&
        <a href={social.inspire} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.inspire} group relative overflow-hidden`} aria-label="INSPIRE profile">
            <Inspire class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-indigo-700/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}

<!-- arxiv -->
    {social.arxiv !== '' &&
        <a href={social.arxiv} target="_blank" rel="noopener noreferrer" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg ${socialColors.arxiv} group relative overflow-hidden`} aria-label="arXiv profile">
            <Arxiv class={`${calculatedIconSize} transition-all duration-300 group-hover:scale-110`} fill="currentColor" aria-hidden="true" />
			<div class="absolute inset-0 bg-gradient-to-r from-red-700/10 to-red-800/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
		</a>
	}
</div>
